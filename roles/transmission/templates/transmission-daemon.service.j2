[Unit]
Description = Torrent Daemon
Wants = network-online.target

[Service]
ExecStart = /usr/local/bin/transmission-daemon -f --log-level=debug --logfile=/var/log/transmission-daemon.log --config-dir {{ containers_path }}/{{ app_user }}/conf
User = {{ app_user }}
Group = {{ app_user }}
Restart = no 
Nice = 0

[Install]
WantedBy = multi-user.target
